<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="#D5DBDB  ">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="0"
            android:nextFocusLeft="@id/et"
            android:selectAllOnFocus="false"
            android:textAlignment="textEnd"
            android:textSize="36sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="«"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="C"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/addition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="+"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="-"
            android:textColor="#82C7CF"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="7"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="8"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="9"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="×"
            android:textColor="#82C7CF"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="4"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="5"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="6"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="÷"
            android:textColor="#82C7CF"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="1"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="2"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="3"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="="
            android:textColor="#82C7CF"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="."
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="0"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/both"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="±"
            android:textColor="#82C7CF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/off"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundshape"
            android:marqueeRepeatLimit="@android:integer/config_shortAnimTime"
            android:shadowColor="#82C7CF"
            android:text="OFF"
            android:textColor="#82C7CF"
            android:textSize="25sp" />
    </TableRow>


</TableLayout>